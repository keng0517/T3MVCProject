           <div id="divCard" class="card">

              <!--Card image-->
              <div class="view">
           <img width="150" height="150" src="@Url.Content(item.Pic)" alt="No Pic" class="card-img-top">
                <a href="#">
                  <div class="mask rgba-white-slight"></div>
                </a>
           </div>

            <!--Card content-->
            <div class="card-body">
            <!--Title-->
            <h4 class="card-title">@item.Name</h4>

            <!--Text-->
            Category: <label class="card-text">@item.Category</label>
            <p class="card-text">@item.Description</p>
            <a href="/Product/DetailsShopper/@item.ProductId" class="btn btn-primary">Buy 1 for $@item.Price</a>
